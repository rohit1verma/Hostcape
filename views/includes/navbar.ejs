        <a class="nav-link" href="/signup"
          ><b><i class="fa-solid fa-user-plus" title="Signup"></i></b
        ></a>
        <a class="nav-link" href="/login"
          ><b><i class="fa-solid fa-right-to-bracket" title="Login"></i></b
        ></a>
